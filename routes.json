{
    "routes": [
        {
            "route": "/.auth/login/github",
            "statusCode": "401"
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": "401"
        },
        {
            "route": "/.auth/login/facebook",
            "statusCode": "401"
        },
        {
            "route": "/.auth/login/google",
            "statusCode": "401"
        },
        {
            "route": "/login",
            "serve": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "serve": "/.auth/logout"
        },
        {
            "route": "/authenticated",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/",
            "serve": "/index.html",
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/*",
            "allowedRoles": [
                "reader", "contributer"
            ]
        }
    ]
}