{
    "routes": [
        {
            "route": "/.auth/login/github",
            "statusCode": "401"
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": "401"
        },
        {
            "route": "/.auth/login/facebook",
            "statusCode": "401"
        },
        {
            "route": "/.auth/login/google",
            "statusCode": "401"
        },
        {
            "route": "/login",
            "serve": "/.auth/login/aad",
            "post_logout_redirect_uri": "/index"
        },
        {
            "route": "/logout",
            "serve": "/.auth/logout",
            "post_logout_redirect_uri": "https://wwww.insight.equinor.com"
        },
        {
            "route": "/authenticated",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/",
            "serve": "/.auth/login/aad",
            "post_logout_redirect_uri": "/index.html"
        },
        {
            "route": "/*",
            "allowedRoles": [
                "reader", "contributer"
            ]
        }
    ]
}