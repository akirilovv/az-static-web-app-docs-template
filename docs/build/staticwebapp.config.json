{
    "routes": [
         {
            "route": "/.auth/login/github",
            "statusCode": 401
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 401
        },
        {
            "route": "/.auth/login/facebook",
            "statusCode": 401
        },
        {
            "route": "/.auth/login/google",
            "statusCode": 401
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/authenticated",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/reader_role",
            "allowedRoles": ["reader", "contributor"]
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/login",
            "statusCode": 302
        },
        "403": {
            "rewrite": "/unauthorized.html"
        }
    },
    "mimeTypes": {
        ".json": "text/json",
        ".css": "text/css",
        ".js": "text/javascript"
    }
}